<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#333332">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_popup_select_date_time"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <com.inks.inkslibrary.view.ClickEffectText
            android:id="@+id/buttonCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="取消"
            android:textColor="#03A9F4"
            android:textSize="16sp"
            app:ColorFilter="#777777" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center"
            android:text="2022-04-29 09:46"
            android:textSize="16sp" />

        <com.inks.inkslibrary.view.ClickEffectText
            android:id="@+id/buttonDone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="确定"
            android:textColor="#03A9F4"
            android:textSize="16sp"
            app:ColorFilter="#777777" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#55dddddd" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f0f0f0"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/layout_y_m_d"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3.5"
            android:background="#f0f0f0"
            android:orientation="horizontal">


            <com.inks.inkslibrary.view.PickerView
                android:id="@+id/pv_year"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.2"
                app:tagAfterItem="true"
                app:tagRightDeviation="5dp"
                app:tagText="年" />

            <com.inks.inkslibrary.view.PickerView
                android:id="@+id/pv_month"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:tagAfterItem="true"
                app:tagRightDeviation="5dp"
                app:tagText="月" />

            <com.inks.inkslibrary.view.PickerView
                android:id="@+id/pv_day"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:tagAfterItem="true"
                app:tagRightDeviation="5dp"
                app:tagText="日" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_h_m"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="#f0f0f0"
            android:orientation="horizontal">

            <com.inks.inkslibrary.view.PickerView
                android:id="@+id/pv_hour"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:tagAfterItem="true"
                app:tagRightDeviation="5dp"
                app:tagText="时" />

            <com.inks.inkslibrary.view.PickerView
                android:id="@+id/pv_minute"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:tagAfterItem="true"
                app:tagRightDeviation="5dp"
                app:tagText="分" />
        </LinearLayout>


    </LinearLayout>

    </LinearLayout>
</RelativeLayout>